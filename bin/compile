#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install vlmcsd"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="https://github.com/Wind4/vlmcsd.git"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar xz
cd vlmcsd
make

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/vlmcsd.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/vlmcsd/bin"' >> $PROFILE_PATH
